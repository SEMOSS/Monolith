	     <param-value>/api</param-value>
	  </init-param>
   </servlet>
   <servlet-mapping>
      <servlet-name>MainApplication</servlet-name>
      <url-pattern>/api/*</url-pattern>
   </servlet-mapping>
   <servlet>
      <servlet-name>AdminApplication</servlet-name>
